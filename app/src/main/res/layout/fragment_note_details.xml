<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.details.NoteDetailsFragment">


    <LinearLayout
        android:id="@+id/container_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/textSizeTextViewDetails"
            android:textStyle="bold"
            tools:text="Название заметки №1">

        </TextView>

        <TextView
            android:id="@+id/label_date_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/date_created"
            android:textSize="@dimen/textSizeTextViewList">

        </TextView>

        <TextView
            android:id="@+id/date_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textSize="@dimen/textSizeTextViewList"
            tools:text="10.02.2022">

        </TextView>

        <TextView
            android:id="@+id/label_date_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/date_updated"
            android:textSize="@dimen/textSizeTextViewList">

        </TextView>

        <TextView
            android:id="@+id/date_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textSize="@dimen/textSizeTextViewList"
            tools:text="10.02.2022">

        </TextView>

        <TextView
            android:id="@+id/discription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Описание заметки №1">

        </TextView>

        <TextView
            android:id="@+id/note_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Текст заметки №1">

        </TextView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>